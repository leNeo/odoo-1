<odoo>
    <template id="assets_editor" inherit_id="website.assets_editor">
        <xpath expr=".">
            <script type="text/javascript"
                    src="/website_speedup/static/src/js/website_adv_image_optimization.js"/>

            <link href="/website_speedup/static/src/css/website_adv_image_optimization.scss"
                  type="text/css" rel="stylesheet"/>
        </xpath>
    </template>

    <template id="assets_frontend" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/website_speedup/static/lib/jquery.lazy.js" />
            <script type="text/javascript" src="/website_speedup/static/src/js/frontend.js" />
        </xpath>
    </template>

</odoo>
